<form class="form-horizontal">
    <h3>Gcode Editor Settings</h3>
    <div class="control-group" title="{{ _('Maximum file size to open in Gcode Editor') }}">
        <label class="control-label" for="settings-gcodeviewer-size">{{ _('Gcode Editor file size threshold') }}</label>
        <div class="controls">
            <div class="input-append">
                <input id="settings-gcodeviewer-size" type="text" class="input-mini text-right" data-bind="value: settings.plugins.GcodeEditor.maxGcodeSize">
            </div>
            <span class="help-inline">{{ _('on desktop')}}</span>
        </div>
        <div class="controls">
            <div class="input-append">
                 <input type="text" class="input-mini text-right" data-bind="value: settings.plugins.GcodeEditor.maxGcodeSizeMobile">
            </div>
            <span class="help-inline">{{ _('on mobile')}}</span>
        </div>
        <div class="controls">
            <span class="help-inline">
                {% trans %}Provide values including size unit. Allowed units are: b, byte, bytes, kb, mb, gb, tb (case insensitive). Example: <code>5MB</code>, <code>500KB</code>{% endtrans %}
            </span>
        </div>
    </div>
</form>